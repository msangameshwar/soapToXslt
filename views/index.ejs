<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Text Area Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-6">
                <form action="/api/submit" method="POST">
                    <div class="row">
                        <div class="col-10">
                            <!-- <label for="soap" class="form-label"><h3>Soap:</h3> </label> -->
                            <div class="alert alert-danger" role="alert">
                                Soap !!!!
                            </div>
                            <% if (typeof inputText !=='undefined' ) { %>
                                <input type="text" name="basePath" class="form-control mb-1" placeholder="Enter base path..."
                                    value="<%= basePath %>">
                                <textarea id="soap" name="inputText" class="form-control"
                                    placeholder="Paste Soap Object here..." rows="20"><%= inputText %></textarea>
                                <% } else{ %>
                                    <input type="text" name="basePath" class="form-control"
                                        placeholder="Enter base path..."> <br>
                                    <textarea id="soap" name="inputText" class="form-control"
                                        placeholder="Paste Soap Object here..." rows="20"></textarea>
                                    <% } %>
                        </div>
                        <div class="col-2 d-flex align-items-center">
                            <button type="submit" class="btn btn-success">Convert</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-6">
                <div class="alert alert-success" role="alert">
                    XSLT
                </div>
                <% if (typeof outputText !=='undefined' ) { %>
                    <textarea id="outputText" class="form-control" rows="22"><%= outputText %></textarea>
                    <% } else{ %>
                        <label for="xslt" class="form-label">XSLT:</label>
                        <textarea id="xslt" class="form-control" rows="22"></textarea>
                        <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
</body>

</html>